# Server Configuration
MCP_SERVER_NAME=fastmcp-modular
MCP_SERVER_VERSION=1.0.0
MCP_ENVIRONMENT=development

# Transport Settings
MCP_TRANSPORT=stdio
MCP_PORT=8000

# Logging
MCP_LOG_LEVEL=INFO
MCP_LOG_FILE=

# API Configuration
MCP_API_BASE_URL=https://api.example.com
MCP_API_KEY=your_api_key_here
MCP_API_SECRET=your_api_secret_here
MCP_REQUEST_TIMEOUT=30
MCP_MAX_RETRIES=3
MCP_VERIFY_SSL=true

# Cache Settings
MCP_CACHE_ENABLED=true
MCP_CACHE_TTL=300
MCP_CACHE_MAX_SIZE=1000
MCP_CACHE_EVICTION=LRU

# Feature Flags
MCP_ADVANCED_FEATURES=true
MCP_RATE_LIMITING=false
MCP_MONITORING=false

# Rate Limiting
MCP_RATE_LIMIT_REQUESTS=100
MCP_RATE_LIMIT_WINDOW=60

# File Operations
MCP_MAX_FILE_SIZE=10485760
MCP_ALLOWED_EXTENSIONS=.txt,.json,.csv,.xml,.log,.md

# Security
MCP_ENABLE_AUTH=false
MCP_AUTH_TOKEN=
MCP_ALLOWED_ORIGINS=*